<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_bg"
    android:padding="5dp">

    <ImageView
        android:id="@+id/dialog_iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_cancel_gray" />

    <TextView
        android:id="@+id/dialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_iv_close"
        android:layout_centerHorizontal="true"
        android:text="请输入房间密码"
        android:textSize="@dimen/sp_14" />

    <com.example.anuo.immodule.view.PayPsdInputView
        android:id="@+id/dialog_psv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_tv_title"
        android:layout_margin="15dp"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        app:divideLineColor="@color/dark_gray_2"
        app:divideLineWidth="0.5dp"
        app:focusedColor="@color/red"
        app:rectAngle="5dp" />

