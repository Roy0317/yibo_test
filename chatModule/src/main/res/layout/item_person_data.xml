<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/item_person_data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/light_gray_12"
            android:textSize="14sp" />


            <TextView
                android:id="@+id/item_person_data_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/yellow_1"
                android:textSize="16sp" />

            <Button
                android:visibility="gone"
                android:id="@+id/item_person_data_refresh"
                android:layout_width="45dp"
                android:layout_height="21dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_refresh_yellow"
                android:text="刷新"
                android:textSize="15sp"
                android:textColor="@color/white"
                />

        
        <Switch
            android:visibility="gone"
            android:id="@+id/item_person_data_switch"
            android:layout_width="45dp"
            android:layout_height="21dp"
            android:thumb="@drawable/switch_thumb_selector"
            android:track="@drawable/switch_track_selector"
            android:layout_alignParentRight="true"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/zz_divider1"
        />


</LinearLayout>
