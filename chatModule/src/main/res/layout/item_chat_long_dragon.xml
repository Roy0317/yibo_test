<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_lottery_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_lottery_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_lottery_icon"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_lot_qihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_4"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_lot_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_lot_qihao"
            android:layout_margin="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_blue_bg"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_lot_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_lot_qihao"
            android:layout_margin="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/tv_lot_content"
            android:background="@drawable/shape_gray_bg"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_lot_qishu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_lot_qihao"
            android:layout_margin="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/tv_lot_play"
            android:background="@drawable/shape_red_bg"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />

    </RelativeLayout>
</LinearLayout>