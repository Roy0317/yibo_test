<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_bg"
    android:orientation="vertical">


    <include
        android:id="@+id/title"
        layout="@layout/chat_top_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="1dp" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bar_grey">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_delete"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="15sp"
            android:text="删除"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:layout_width="60dp"
            android:background="@drawable/chat_image_select_delete"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_send"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="15sp"
            android:text="发送"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:layout_width="60dp"
            android:background="@drawable/chat_image_select_send"
            android:layout_height="match_parent"/>


    </RelativeLayout>
</LinearLayout>