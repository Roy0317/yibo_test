<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_play_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="玩法"
        android:textColor="@color/yellow_5"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/qihao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_play_name"
        android:layout_margin="5dp"
        android:text="期号:"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_qihao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_play_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/qihao"
        android:text=""
        android:textColor="@color/yellow_5"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qihao"
        android:layout_margin="5dp"
        android:text="号码:"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_qihao"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/content"
        android:text=""
        android:textColor="@color/yellow_5"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_margin="5dp"
        android:text="金额:"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/amount"
        android:text=""
        android:textColor="@color/yellow_5"
        android:textSize="@dimen/sp_16" />

    <CheckBox
        android:id="@+id/cb_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_toLeftOf="@id/cb_choose"
        android:text="已中奖"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />
</RelativeLayout>