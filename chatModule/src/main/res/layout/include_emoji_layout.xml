<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_emoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.anuo.immodule.view.WrapContentHeightViewPager
            android:id="@+id/vp_emoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10" />


        <com.example.anuo.immodule.view.IndicatorView
            android:id="@+id/ind_emoji"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#f3f3f3"
            app:gravity="0"
            app:indicatorColor="#668b8989"
            app:indicatorColorSelected="#ffffff"
            app:indicatorWidth="6" />

    </LinearLayout>

</LinearLayout>