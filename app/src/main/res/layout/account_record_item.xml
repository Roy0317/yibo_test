<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/item"
    android:clickable="true"
    android:background="@drawable/caipiao_item_bg">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/orderno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号: 3123124214"
            android:textSize="@dimen/list_text_size"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderno"
            android:layout_marginTop="10dp"
            android:text="手续费:"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/money_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变动前金额: 60元"
            android:textSize="@dimen/text_size_small"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/fee"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/change_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变动金额: -10元"
            android:layout_alignBottom="@id/money_before"
            android:textSize="@dimen/text_size_small"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/after_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变动后金额: 20元"
            android:textSize="@dimen/text_size_small"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/money_before"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-08-12 19:00:00"
            android:textSize="@dimen/text_size_small"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/after_money"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>


    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/more"/>

</LinearLayout>
