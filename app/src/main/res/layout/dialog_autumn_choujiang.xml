<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="结果"
        android:textColor="@color/black"
        android:textSize="22dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_touzi1"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/tv_touzi2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="2dp" />

        <ImageView
            android:id="@+id/tv_touzi3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="2dp" />

        <ImageView
            android:id="@+id/tv_touzi4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="2dp" />

        <ImageView
            android:id="@+id/tv_touzi5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="2dp" />

        <ImageView
            android:id="@+id/tv_touzi6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="2dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_jieguo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="摇中结果"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shiwan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/yellow"
            android:gravity="center"
            android:onClick="clickMe"
            android:padding="10dp"
            android:text="试玩"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/yellow"
            android:gravity="center"
            android:onClick="clickMe"
            android:padding="10dp"
            android:text="关闭"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>

