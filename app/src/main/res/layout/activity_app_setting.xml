<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/title"
        layout="@layout/top_title" />

    <com.yibo.yiboapp.ui.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/app_auto_login_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/caipiao_item_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="自动登录"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/auto_login_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:checked="true" />

            </RelativeLayout>

            <include layout="@layout/view_divider_dark_horizontal" />

            <!--<RelativeLayout-->
            <!--android:id="@+id/remember_pwd_layout"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/caipiao_item_bg"-->
            <!--android:clickable="true"-->
            <!--android:visibility="visible"-->
            <!--android:gravity="center_vertical"-->
            <!--android:paddingBottom="5dp"-->
