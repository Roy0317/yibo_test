<?xml version="1.0" encoding="utf-8"?>
<com.yibo.yiboapp.ui.RegFieldView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#F0F0F0"/>

    <!-- QQ -->
    <LinearLayout
        android:id="@+id/qq_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/register_item_height"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:drawablePadding="2dp"
                android:gravity="right"
                android:text="@string/qq_str"
                android:textColor="@color/grey"/>

            <com.yibo.yiboapp.ui.XEditText
                android:id="@+id/value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1.0"
                android:background="@color/colorWhite"
                android:drawablePadding="0dip"
                android:paddingBottom="10dip"
                android:paddingLeft="0dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:hint="@string/input_qq"
                android:textColor="#3E3D3D"
                android:textColorHint="@color/input_text_hint"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/vertify_code_img"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:visibility="visible"
                android:clickable="true"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#F0F0F0"/>

    </LinearLayout>

</com.yibo.yiboapp.ui.RegFieldView>