<?xml version="1.0" encoding="utf-8"?><!-- new version login view -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_and_register_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/rootBackgroundImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/new_page_background"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1AFFFFFF"
        android:orientation="vertical">

        <include
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintTop_toTopOf="parent"
            android:id="@+id/title"
            layout="@layout/top_title"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_title"
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp"
                android:text="返回"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/agent_reg"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/agent_register"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintTop_toBottomOf="@+id/ll_title"
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:scaleType="centerCrop"
            fresco:actualImageScaleType="fitCenter"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_login_and_register"
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintTop_toBottomOf="@+id/logo"
            fresco:layout_constraintBottom_toTopOf="@+id/ll_route_check"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="12dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_login"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/new_login_bg"
                android:orientation="vertical"
                fresco:layout_constraintBottom_toBottomOf="parent"
                fresco:layout_constraintEnd_toStartOf="@+id/percent_line"
                fresco:layout_constraintStart_toStartOf="parent"
                fresco:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ll_login_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:visibility="visible"
                    fresco:layout_constraintBottom_toBottomOf="parent"
                    fresco:layout_constraintEnd_toEndOf="parent"
                    fresco:layout_constraintStart_toStartOf="parent"
                    fresco:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/login_title"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="登录"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        fresco:layout_constraintEnd_toEndOf="parent"
                        fresco:layout_constraintStart_toStartOf="parent"
                        fresco:layout_constraintTop_toTopOf="parent"/>

                    <LinearLayout
                        android:id="@+id/input_area"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        fresco:layout_constraintBottom_toTopOf="@+id/enter_checkbox"
                        fresco:layout_constraintEnd_toEndOf="parent"
                        fresco:layout_constraintStart_toStartOf="parent"
                        fresco:layout_constraintTop_toBottomOf="@+id/login_title"
                        fresco:layout_constraintVertical_chainStyle="packed">
                        <!-- 帐号 -->
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/user_right_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/above"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.yibo.yiboapp.ui.XEditText
                                        android:id="@+id/user_name"
                                        android:layout_width="fill_parent"
                                        android:layout_height="40dp"
                                        android:layout_weight="1.0"
                                        android:background="@drawable/input_frame_bg_new"
                                        android:clickable="true"
                                        android:drawableLeft="@drawable/new_page_account_drawable"
                                        android:drawableRight="@drawable/new_page_delete_drawable"
                                        android:drawablePadding="5dip"
                                        android:focusable="true"
                                        android:hint="@string/hint_account"
                                        android:imeOptions="actionNext"
                                        android:longClickable="false"
                                        android:maxLines="1"
                                        android:paddingLeft="10dip"
                                        android:paddingTop="8dip"
                                        android:paddingRight="10dip"
                                        android:paddingBottom="8dip"
                                        android:singleLine="true"
                                        android:textColor="@color/input_text_hint"
                                        android:textColorHint="@color/input_text_hint"
                                        android:textSize="14sp"/>
                                    <!-- 用户名右侧删除用户名区域 -->
                                    <LinearLayout
                                        android:id="@+id/clean_text"
                                        android:layout_width="30dip"
                                        android:layout_height="30dip"
                                        android:layout_gravity="center_vertical"
                                        android:clickable="true"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="5dip"
                                            android:clickable="false"
                                            android:focusable="false"
                                            android:src="@drawable/new_page_delete_drawable"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <!-- 密码输入 -->
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                            <LinearLayout
                                android:id="@+id/pwd_right_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.yibo.yiboapp.ui.XEditText
                                        android:id="@+id/user_pwd"
                                        android:layout_width="fill_parent"
                                        android:layout_height="40dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_weight="1.0"
                                        android:background="@drawable/input_frame_bg_new"
                                        android:drawableLeft="@drawable/new_page_password_drawable"
                                        android:drawableRight="@drawable/new_page_delete_drawable"
                                        android:drawablePadding="5dip"
                                        android:hint="@string/hint_pwd"
                                        android:imeOptions="actionDone"
                                        android:inputType="textPassword"
                                        android:longClickable="false"
                                        android:maxLines="1"
                                        android:paddingLeft="10dip"
                                        android:paddingTop="8dip"
                                        android:paddingRight="10dip"
                                        android:paddingBottom="8dip"
                                        android:textColor="@color/input_text_hint"
                                        android:textColorHint="@color/input_text_hint"
                                        android:textSize="14sp"/>

                                    <ImageView
                                        android:id="@+id/switch_pwd"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="5dip"
                                        android:clickable="true"
                                        android:visibility="gone"/>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <!-- 图形验证码 -->
                        <RelativeLayout
                            android:id="@+id/vcode_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <LinearLayout
                                android:id="@+id/vcode_right_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.yibo.yiboapp.ui.XEditText
                                            android:id="@+id/vcode_input"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:layout_centerVertical="true"
                                            android:layout_toLeftOf="@+id/vcode_img"
                                            android:layout_weight="1.0"
                                            android:background="@drawable/input_frame_bg_new"
                                            android:drawableLeft="@drawable/new_page_verify_code_drawable"
                                            android:drawablePadding="5dip"
                                            android:hint="@string/hint_vcode"
                                            android:imeOptions="actionDone"
                                            android:inputType="text"
                                            android:longClickable="false"
                                            android:maxLines="1"
                                            android:paddingLeft="10dip"
                                            android:paddingTop="8dip"
                                            android:paddingRight="10dip"
                                            android:paddingBottom="8dip"
                                            android:singleLine="true"
                                            android:textColor="@color/input_text_hint"
                                            android:textColorHint="@color/input_text_hint"
                                            android:textSize="14sp"/>

                                        <ImageView
                                            android:id="@+id/vcode_img"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginEnd="10dp"
                                            android:background="@color/light_gray"
                                            android:clickable="true"
                                            android:gravity="center_vertical"
                                            android:visibility="visible"/>
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/enter_checkbox"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        fresco:layout_constraintBottom_toTopOf="@+id/login_btn"
                        fresco:layout_constraintEnd_toEndOf="parent"
                        fresco:layout_constraintStart_toStartOf="parent"
                        fresco:layout_constraintTop_toBottomOf="@+id/input_area"
                        tools:layout_editor_absoluteX="30dp">

                        <CheckBox
                            android:id="@+id/auto_enter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="@string/auto_enter_string"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            android:visibility="gone"/>

                        <CheckBox
                            android:id="@+id/remember_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:buttonTint="@color/white"
                            android:checked="true"
                            android:text="@string/remember_code"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:visibility="visible"/>
                    </RelativeLayout>

                    <Button
                        android:id="@+id/login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/new_page_btn_selector"
                        android:text="@string/login"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        fresco:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
                        fresco:layout_constraintEnd_toEndOf="parent"
                        fresco:layout_constraintStart_toStartOf="parent"
                        fresco:layout_constraintTop_toBottomOf="@+id/enter_checkbox"
                        tools:layout_editor_absoluteX="30dp"/>
                    <!-- 忘记密码 -->
                    <RelativeLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        fresco:layout_constraintBottom_toBottomOf="parent"
                        fresco:layout_constraintEnd_toEndOf="parent"
                        fresco:layout_constraintStart_toStartOf="parent"
                        fresco:layout_constraintTop_toBottomOf="@+id/login_btn"
                        tools:layout_editor_absoluteX="30dp">

                        <TextView
                            android:id="@+id/guest_login_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:clickable="true"
                            android:paddingTop="5dip"
                            android:paddingBottom="5dip"
                            android:text="@string/play_free"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/route_checking_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:text="路由检测"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            android:visibility="invisible"/>

                        <TextView
                            android:id="@+id/online_custom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:clickable="true"
                            android:text="@string/online_service"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/forget_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:paddingTop="5dip"
                            android:paddingBottom="5dip"
                            android:text="@string/forget_pwd"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_register"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/new_register_bg"
                android:orientation="vertical"
                fresco:layout_constraintBottom_toBottomOf="parent"
                fresco:layout_constraintEnd_toEndOf="parent"
                fresco:layout_constraintStart_toEndOf="@+id/percent_line"
                fresco:layout_constraintTop_toTopOf="parent">

                <ScrollView
                    android:id="@+id/ll_register_content"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="none"
                    android:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/register_title"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="注册"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            fresco:layout_constraintEnd_toEndOf="parent"
                            fresco:layout_constraintStart_toStartOf="parent"
                            fresco:layout_constraintTop_toTopOf="parent"/>
                        <!-- 个人信息 -->
                        <LinearLayout
                            android:id="@+id/infos"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            fresco:layout_constraintEnd_toEndOf="parent"
                            fresco:layout_constraintHorizontal_bias="0.5"
                            fresco:layout_constraintStart_toStartOf="parent"
                            fresco:layout_constraintTop_toBottomOf="@+id/register_title"
                            fresco:layout_constraintVertical_chainStyle="packed">
                            <!-- 用户帐户 -->
                            <LinearLayout
                                android:id="@+id/account_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/input_frame_bg_light"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="4dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dip"
                                        android:src="@drawable/start_icon"/>

                                    <com.yibo.yiboapp.ui.XEditText
                                        android:id="@+id/account"
                                        android:layout_width="fill_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginRight="10dip"
                                        android:layout_weight="1.0"
                                        android:background="@color/transparent"
                                        android:drawableLeft="@drawable/new_page_account_drawable"
                                        android:drawablePadding="5dip"
                                        android:hint="@string/input_username"
                                        android:imeOptions="actionNext"
                                        android:maxLines="1"
                                        android:paddingLeft="0dip"
                                        android:paddingTop="10dip"
                                        android:paddingRight="10dip"
                                        android:paddingBottom="10dip"
                                        android:singleLine="true"
                                        android:textColor="@color/white"
                                        android:textColorHint="@color/white"
                                        android:textSize="14dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <!-- 登录密码 -->
                            <LinearLayout
                                android:id="@+id/login_pwd"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/input_frame_bg_light"
                                android:orientation="vertical"
                                android:paddingHorizontal="4dp">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="0dip"
                                    android:layout_marginRight="0dip"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dip"
                                        android:src="@drawable/start_icon"/>

                                    <com.yibo.yiboapp.ui.XEditText
                                        android:id="@+id/password"
                                        android:layout_width="fill_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginRight="10dip"
                                        android:layout_weight="1.0"
                                        android:background="@color/transparent"
                                        android:drawableLeft="@drawable/new_page_password_drawable"
                                        android:drawablePadding="5dip"
                                        android:hint="@string/input_pwd"
                                        android:imeOptions="actionNext"
                                        android:inputType="textPassword"
                                        android:maxLines="1"
                                        android:paddingLeft="0dip"
                                        android:paddingTop="10dip"
                                        android:paddingRight="10dip"
                                        android:paddingBottom="10dip"
                                        android:singleLine="true"
                                        android:textColor="@color/white"
                                        android:textColorHint="@color/white"
                                        android:textSize="14dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <!-- 确认密码 -->
                            <LinearLayout
                                android:id="@+id/cofirm_login_pwd"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/input_frame_bg_light"
                                android:orientation="vertical"
                                android:paddingHorizontal="4dp">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="0dip"
                                    android:layout_marginRight="0dip"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dip"
                                        android:src="@drawable/start_icon"/>

                                    <com.yibo.yiboapp.ui.XEditText
                                        android:id="@+id/confirm_password"
                                        android:layout_width="fill_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginRight="10dip"
                                        android:layout_weight="1.0"
                                        android:background="@color/transparent"
                                        android:drawableLeft="@drawable/new_page_password_drawable"
                                        android:drawablePadding="5dip"
                                        android:hint="@string/input_pwd_again"
                                        android:imeOptions="actionNext"
                                        android:inputType="textPassword"
                                        android:maxLines="1"
                                        android:paddingLeft="0dip"
                                        android:paddingTop="10dip"
                                        android:paddingRight="10dip"
                                        android:paddingBottom="10dip"
                                        android:singleLine="true"
                                        android:textColor="@color/white"
                                        android:textColorHint="@color/white"
                                        android:textSize="14dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <!-- 验证码 -->
                            <LinearLayout
                                android:id="@+id/vertify_code_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/input_frame_bg_light"
                                android:orientation="vertical"
                                android:paddingHorizontal="4dp"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="@dimen/register_item_height"
                                    android:layout_marginLeft="0dip"
                                    android:layout_marginRight="0dip"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dip"
                                        android:drawableRight="@drawable/start_icon"
                                        android:drawablePadding="2dp"
                                        android:gravity="right"
                                        android:text="@string/vertify_code"
                                        android:textColor="@color/white"
                                        android:textSize="16dp"/>

                                    <com.yibo.yiboapp.ui.XEditText
                                        android:id="@+id/vertify_code"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dip"
                                        android:layout_marginRight="10dip"
                                        android:layout_weight="1.0"
                                        android:background="@color/transparent"
                                        android:drawablePadding="0dip"
                                        android:hint="@string/input_vertify_code"
                                        android:imeOptions="actionDone"
                                        android:maxLines="1"
                                        android:paddingLeft="0dip"
                                        android:paddingTop="10dip"
                                        android:paddingRight="10dip"
                                        android:paddingBottom="10dip"
                                        android:singleLine="true"
                                        android:textColor="@color/white"
                                        android:textColorHint="@color/white"
                                        android:textSize="16dp"/>

                                    <ImageView
                                        android:id="@+id/vertify_code_img"
                                        android:layout_width="60dp"
                                        android:layout_height="30dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- 忘记密码 -->
                        <RelativeLayout
                            android:id="@+id/act_bottom_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:layout_marginTop="20dip"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            fresco:layout_constraintBottom_toBottomOf="parent"
                            fresco:layout_constraintEnd_toEndOf="parent"
                            fresco:layout_constraintHorizontal_bias="0.5"
                            fresco:layout_constraintStart_toStartOf="parent"
                            fresco:layout_constraintTop_toBottomOf="@+id/infos">

                            <TextView
                                android:id="@+id/serve_online_old"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:clickable="true"
                                android:paddingTop="5dip"
                                android:paddingBottom="5dip"
                                android:text="@string/online_service"
                                android:textColor="@color/grey"
                                android:textSize="14sp"/>
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </ScrollView>
                <Button
                    android:id="@+id/reg_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/new_page_btn_selector"
                    android:text="@string/register_intime"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                 />

            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/percent_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                fresco:layout_constraintGuide_percent="0.12"/>

            <LinearLayout
                android:id="@+id/login_switch"
                android:layout_width="44dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                fresco:layout_constraintBottom_toBottomOf="parent"
                fresco:layout_constraintStart_toStartOf="parent"
                fresco:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/icon_new_page_login"
                    android:tint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingMultiplier="0.9"
                    android:text=" 返\n 回\n 登\n 录"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/register_switch"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                fresco:layout_constraintBottom_toBottomOf="parent"
                fresco:layout_constraintEnd_toEndOf="parent"
                fresco:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/icon_new_page_register"
                    android:tint="@color/white"
                    fresco:layout_constraintBottom_toBottomOf="parent"
                    fresco:layout_constraintEnd_toEndOf="parent"
                    fresco:layout_constraintStart_toStartOf="parent"
                    fresco:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingMultiplier="0.9"
                    android:text=" 立\n 即\n 注\n 册"
                    android:textColor="@color/white"
                    android:textSize="14dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_route_check"
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintTop_toBottomOf="@+id/cl_login_and_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/guest_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="@string/play_free"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/route_checking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="路由检测"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/serve_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="@string/online_service"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:visibility="visible"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintTop_toBottomOf="@+id/ll_route_check">

            <LinearLayout
                android:id="@+id/rl_choose_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                fresco:layout_constraintBottom_toTopOf="@+id/tv_versio_name"
                fresco:layout_constraintEnd_toEndOf="parent"
                fresco:layout_constraintStart_toStartOf="parent"
                fresco:layout_constraintTop_toTopOf="parent"
                fresco:layout_constraintVertical_chainStyle="packed">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="线路切换—"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/tv_choose_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_versio_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                fresco:layout_constraintBottom_toBottomOf="parent"
                fresco:layout_constraintEnd_toEndOf="parent"
                fresco:layout_constraintStart_toStartOf="parent"
                fresco:layout_constraintTop_toBottomOf="@+id/rl_choose_route" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
