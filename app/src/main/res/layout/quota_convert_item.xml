<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item"
    android:clickable="true"
    android:background="@drawable/caipiao_item_bg"
    >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AG"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2.85RMB"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/name"
        android:textSize="14sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/enter"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/enter_game"
            android:textSize="10sp"
            android:textColor="@color/color_red"
            android:background="@drawable/list_btn_selector"/>


        <TextView
            android:id="@+id/convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/convert_string"
            android:textSize="14sp"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/enter"
            android:layout_marginLeft="30dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/more"
            />

    </LinearLayout>

</RelativeLayout>