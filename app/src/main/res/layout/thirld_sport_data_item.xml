<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/platform_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="类型："
        android:textSize="@dimen/list_text_size" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/platform_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/tv_winmoney"
        android:text="盈亏：" />

    <TextView
        android:id="@+id/tv_winmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="元"
        android:textColor="@color/red" />


    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/platform_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:text="投注金额:"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_bettingmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_money"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_money"
        android:textSize="@dimen/text_size_small" />


    <TextView
        android:id="@+id/tz_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/platform_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/time"
        android:text="时间:"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/platform_type"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="0000-00-00 00:00:00"
        android:textSize="@dimen/text_size_small" />


</RelativeLayout>
