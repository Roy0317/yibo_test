<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/item_confirm_pay_left_txt"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:text="订单号码："
        android:textColor="@color/color_txt_normal"
        skin:enable="true" />

    <TextView
        android:id="@+id/item_confirm_pay_right_txt"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="xxxx"
        android:textColor="@color/color_txt_normal"
        skin:enable="true" />

    <TextView
        android:id="@+id/item_confirm_pay_copy_btn"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:background="@drawable/shape_frame_bg3"
        android:gravity="center"
        android:text="复制"
        android:textColor="@color/color_txt_normal"
        android:textSize="13sp"
        skin:enable="true" />



</LinearLayout>
