<?xml version="1.0" encoding="utf-8"?>
<com.yibo.yiboapp.ui.EmptyListView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_empty_image"
            android:layout_width="200dp"
            android:layout_height="105dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/empty_listview" />

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dip"
            android:singleLine="true"
            android:text="@string/nodata"
            android:textColor="#BDCEDF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/click_refresh"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:background="@drawable/red_border_normal"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:text="@string/click_refresh"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />


    </LinearLayout>

</com.yibo.yiboapp.ui.EmptyListView>
