<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RealElectricRecordDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:padding="4dp"
            android:text="关闭"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_order_no"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="@string/record_order_no"
        android:textSize="15sp"
        android:background="@color/lightgrey_max"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/half_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="会员"
            android:textSize="15sp"
            android:background="@color/lightgrey_max"/>

        <TextView
            android:id="@+id/text_member_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="admin11"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下注金额"
            android:textSize="15sp"
            android:background="@color/lightgrey_max"/>

        <TextView
            android:id="@+id/text_bet_money"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="20"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下注时间"
            android:textSize="15sp"
            android:background="@color/lightgrey_max"/>

        <TextView
            android:id="@+id/text_bet_datetime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2021/07/22 18:00:00"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="类型"
            android:textSize="15sp"
            android:background="@color/lightgrey_max"/>

        <TextView
            android:id="@+id/text_game_type"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="百家乐"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="平台"
            android:textSize="15sp"
            android:background="@color/lightgrey_max"/>

        <TextView
            android:id="@+id/text_platform"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BG"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下注类目"
            android:textSize="15sp"
            android:background="@color/lightgrey_max"/>

        <TextView
            android:id="@+id/text_bet_content"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="庄赢"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="游戏码"
            android:textSize="15sp"
            android:background="@color/lightgrey_max"/>

        <TextView
            android:id="@+id/text_game_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BGA0121072122B"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="桌号"
            android:textSize="15sp"
            android:background="@color/lightgrey_max"/>

        <TextView
            android:id="@+id/text_table_no"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="中奖金额"
            android:textSize="15sp"
            android:background="@color/lightgrey_max"/>

        <TextView
            android:id="@+id/text_win_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="80"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="盈亏"
            android:textSize="15sp"
            android:background="@color/lightgrey_max"/>

        <TextView
            android:id="@+id/text_net_money"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="60"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
</LinearLayout>