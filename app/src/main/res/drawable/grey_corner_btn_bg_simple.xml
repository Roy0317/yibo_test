<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/simple_color_clear" />
            <corners android:radius="5dp" />
            <size android:width="@dimen/ballon_size" android:height="@dimen/ballon_size" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/simple_color_clear_press" />
            <corners android:radius="5dp" />
            <size android:width="@dimen/ballon_size" android:height="@dimen/ballon_size" />
        </shape>
    </item>
</selector>